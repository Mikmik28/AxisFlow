<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Sku:</strong>
    <%= product.sku %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Unit:</strong>
    <%= product.unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Barcode:</strong>
    <%= product.barcode %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price cents:</strong>
    <%= product.price_cents %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= product.currency %>
  </div>
</div>
