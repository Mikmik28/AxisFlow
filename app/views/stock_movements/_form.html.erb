<%= form_with(model: stock_movement, class: "contents") do |form| %>
  <% if stock_movement.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(stock_movement.errors.count, "error") %> prohibited this stock_movement from being saved:</h2>

      <ul class="list-disc ml-6">
        <% stock_movement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": stock_movement.errors[:product_id].none?, "border-red-400 focus:outline-red-600": stock_movement.errors[:product_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :warehouse_id %>
    <%= form.text_field :warehouse_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": stock_movement.errors[:warehouse_id].none?, "border-red-400 focus:outline-red-600": stock_movement.errors[:warehouse_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :qty_delta %>
    <%= form.number_field :qty_delta, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": stock_movement.errors[:qty_delta].none?, "border-red-400 focus:outline-red-600": stock_movement.errors[:qty_delta].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :reason %>
    <%= form.text_field :reason, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": stock_movement.errors[:reason].none?, "border-red-400 focus:outline-red-600": stock_movement.errors[:reason].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :reference_id %>
    <%= form.text_field :reference_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": stock_movement.errors[:reference_id].none?, "border-red-400 focus:outline-red-600": stock_movement.errors[:reference_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
