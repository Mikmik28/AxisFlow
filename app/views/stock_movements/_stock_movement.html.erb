<div id="<%= dom_id stock_movement %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Product:</strong>
    <%= stock_movement.product_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Warehouse:</strong>
    <%= stock_movement.warehouse_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Qty delta:</strong>
    <%= stock_movement.qty_delta %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Reason:</strong>
    <%= stock_movement.reason %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Reference:</strong>
    <%= stock_movement.reference_id %>
  </div>
</div>
